# Uncomment this line to define a global platform for your project
platform :ios, '15.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks! :linkage => :static

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  
  # FIX: Explicitly ignore warnings for noisy pods to clean up build logs
  pod 'FirebaseCore', :inhibit_warnings => true
  pod 'FirebaseAuth', :inhibit_warnings => true
  pod 'GoogleUtilities', :inhibit_warnings => true
  
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      # FIX: Enforce iOS 15.0
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      
      # FIX: Force Swift 5.0 for all dependencies to resolve Module Interface errors
      config.build_settings['SWIFT_VERSION'] = '5.0'
      
      # FIX: Disable Bitcode (Deprecated in Xcode 14+)
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      
      # Fix for Flutter module not found errors
      config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
      
      # FIX: Resolve some signing issues in newer Xcode
      if target.respond_to?(:product_type) and target.product_type == "com.apple.product-type.bundle"
        config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
      end
      
      # Ensure Flutter framework can be found
      framework_search_paths = config.build_settings['FRAMEWORK_SEARCH_PATHS'] || []
      framework_search_paths << '$(inherited)' unless framework_search_paths.include?('$(inherited)')
      framework_search_paths << '$(PROJECT_DIR)/../Flutter' unless framework_search_paths.include?('$(PROJECT_DIR)/../Flutter')
      config.build_settings['FRAMEWORK_SEARCH_PATHS'] = framework_search_paths.uniq
      
      # Ensure Flutter headers can be found
      header_search_paths = config.build_settings['HEADER_SEARCH_PATHS'] || []
      header_search_paths << '$(inherited)' unless header_search_paths.include?('$(inherited)')
      header_search_paths << '$(PROJECT_DIR)/../Flutter' unless header_search_paths.include?('$(PROJECT_DIR)/../Flutter')
      config.build_settings['HEADER_SEARCH_PATHS'] = header_search_paths.uniq
    end
  end
end
